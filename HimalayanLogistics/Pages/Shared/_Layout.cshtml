<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HimalayanLogistics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HimalayanLogistics.styles.css" asp-append-version="true" />
    <style>
        header {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: white;
            box-shadow: 0 4px 2px -2px gray;
            z-index:999;
        }

        .main-section {
            margin-top: 130px;
        }

        .upper-bar .navbar-nav {
            justify-content: end;
            flex-direction: row !important;
        }

        .upper-bar {
            background-color: black;
            padding: 0 5px;
            color:white !important;
        }

            .upper-bar .navbar-nav li {
                margin-left: 10px;
            }

                .upper-bar .navbar-nav li a {
                    color: white !important;
                }

        .navbar-collapse ul li {
            border-bottom: 5px solid transparent;
            font-weight: 500;
            font-size: 20px;
        }

            .navbar-collapse ul li:hover {
                border-bottom: 5px solid red;
            }

        header .navbar-collapse .nav-item {
            width: 200px;
            text-align: center;
        }

        .logo-img img {
            width: 150px;
            position: fixed;
            top: 10px;
        }
            .container {
                    max-width: 1400px;
             }

             .consultation a.btn-primary {
            background-color: #eb1424;
            border-color: #eb1424;
            padding: 10px;
            height:50px;
            line-height:normal;
             }

             footer {
                 background-color:black;
                 color:white;
                 padding:20px 0 0;
                 position:static !important;
                 height:auto;

             }

        .fa {
            padding: 20px;
            font-size: 30px;
            width: 50px;
            text-align: center;
            text-decoration: none;
            margin: 5px 2px;
            color:white !important;
        }

            .fa:hover {
                opacity: 0.7;
            }

        .social-links-list{
            margin-bottom:auto;
        }
        .social-links-list li {
            list-style-type: none;
            display:inline;
        }


    </style>
</head>
<body>
    <header>
        <div class="upper-bar row">
            <div class="container">
                <partial name="_LoginPartial" />
            </div>
            

        </div>
        <div class="container">


            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ml-auto">


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Solutions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Insights & Trends</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Contact</a>
                        </li>
                    </ul>
                </div>

            </nav>
        </div>
    </header>
    <div class="container main-section">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="consultation row">
                <span style="color:white; font-size:20px; line-height: revert;" class="col-md-4">Want to Get Free Consulatation? Let Us Know!</span>
                <a class="btn btn-primary col-md-1" style="" asp-area="" asp-page="/DeliveryTrackings/Index">Contact Us</a>
                <div class="col-md-4"></div>
                <div class="social-media-links col-md-3" style="float:right;">
                    <ul class="social-links-list">
                        <li class="social-1">
                            <a href="#" class="fa fa-facebook"></a>
                        </li>
                        <li class="social-2">
                            <a href="#" class="fa fa-twitter"></a>
                        </li>
                        <li class="social-3">
                            <a href="#" class="fa fa-linkedin"></a>
                        </li>
                        <li class="social-4">
                            <a href="#" class="fa fa-instagram"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>