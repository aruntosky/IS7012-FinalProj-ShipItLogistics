<style>
    .hero-container {
        background-image: url('hero-img.jpg');
        height: 600px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero-container .row {
            padding: 0 20px;
    }

    .discount-add-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .mb-50 {
        margin-bottom: 50px;
    }

    .item-container{
        color: white;
    }

    .track-order {
        background-color: rgba(0,0,0,0.4);
        border-radius: 5px;
        padding: 20px;
    }
    .track-order a, .discount-offer a {
            background-color: #eb1424;
            border-color: #eb1424;
            width:100%;
            padding:10px;
    }

    .discount-offer h1 {
        color: #eb1424;
        font-weight:800;
    }

    .discount-offer p {
        color: #eb1424;
        line-height:30px;
        font-weight:500;
    }

    .discount-offer {
        display:flex;
        flex-direction:column;
    }

    .track-order input {
        margin: 20px 0;
        padding:10px;
    }
    .advantages-list-content {
        text-align:center;
        color: #eb1424;
        font-weight:500;
        font-size:30px;
    }

    .service {
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height:300px;
        border: 1px solid red;
        position:relative;
        margin-bottom:20px;
    }

    .service-1 {
        background-image: url('service-1.jpg');
    }
    .service-2 {
        background-image: url('service-2.jpg');
    }
    .service-3 {
        background-image: url('service-3.jpg');
    }
    .service-4 {
        background-image: url('service-4.jpg');
    }
    .service-5 {
        background-image: url('service-5.jpg');
    }
    .service-6 {
        background-image: url('service-6.jpg');
    }

    .service-link {
        padding:10px;
        text-align:center;
        background-color: #eb1424;
        color: white;
        font-weight:500;
        font-size:20px;
        text-decoration:none;
        position:absolute;
        bottom:0;
        left:0;
    }

    .heading {
        padding: 40px 0;
        border-top: 1px solid rgba(0,0,0,0.4);
    }

</style>
<div class="hero-container mb-50">
