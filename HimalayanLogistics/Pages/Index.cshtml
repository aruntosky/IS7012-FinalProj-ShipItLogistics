<style>
    .hero-container {
        background-image: url('hero-img.jpg');
        height: 600px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .discount-add-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .mb-50 {
        margin-bottom: 50px;
    }

    .item-container {
        color: white;
    }

    .track-order {
        background-color: rgba(0,0,0,0.4);
        border-radius: 5px;
        padding: 20px;
    }

        .track-order a, .discount-offer a {
            background-color: #eb1424;
            border-color: #eb1424;
            width: 100%;
            padding: 10px;
        }

    .discount-offer h1 {
        color: #eb1424;
        font-weight: 800;
    }

    .discount-offer p {
        color: #eb1424;
        line-height: 30px;
        font-weight: 500;
    }

    .discount-offer {
        display: flex;
        flex-direction: column;
    }

    .track-order input {
        margin: 20px 0;
        padding: 10px;
    }

    .advantages-list-content {
        text-align: center;
        color: #eb1424;
        font-weight: 500;
        font-size: 30px;
    }

</style>
<div class="hero-container mb-50">
    <div class="container item-container">
        <div class="row">
            <div class="heading-text justify-content-center col-sm-6">
                <h1>Reliable Trucking and Transportation Services.</h1>
                <h4>Logistic Solutions for Your Successful Business</h4>
            </div>
            <div class="col-sm-2"></div>
            <div class="track-order justify-content-center col-sm-4">
                <h2>Track Your Order</h2>
                <input type="text" class="form-control" placeholder="Tracking Number">
                <a class="btn btn-primary mb-3" asp-area="" asp-page="/Privacy" asp-route-trackingNum="10">Track</a>
            </div>
        </div>
    </div>

</div>
<div class="container discount-add-container mb-50">
